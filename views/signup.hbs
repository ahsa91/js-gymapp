{{> welcomemenu id="signup"}}

<div class="column">
    <form class="ui stacked segment form" action="/register" method="POST">
        <h3 class="ui header">Register</h3>
        <div class="two fields">
            <div class="field">
                <label>Name</label>
                <input placeholder="Name" type="text" name="name" required>
            </div>
            <div class="field">
                <label for="gender">Gender</label>
                <select name="gender" id="gender" required>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <option value="Unspecified">Unspecified</option>
                </select>
            </div>
        </div>
        <div class="field">
            <label>Email</label>
            <input placeholder="Email" type="email" name="email" required>
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" required autocomplete="on">
        </div>
        <div class="field">
            <label>Address</label>
            <input type="text" name="address" required>
        </div>
        <div class="two fields">
            <div class="field">
                <label>Height</label>
                <input placeholder="1.00m" type="number" min="1.00" max="3.00" step="0.1" name="height" required>
            </div>
            <div class="field">
                <label>Starting Weight</label>
                <input placeholder="00.00kg" type="number" min="35.00" max="250.00" step="0.1" name="startingweight" required>
            </div>
        </div>
        <button class="ui blue submit button">Submit</button>
    </form>
</div>

